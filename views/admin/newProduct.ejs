<%- include('../../views/partials/head.ejs') %>
<div class="container"><br>
  <a href="/admin/products" class="btn btn-dark"> Back to Products</a><br>
  <br>
  <div class="card" style="width: 30rem;">
    <div class="card-header"><h3>Create new product</h3></div>
    <form action="/admin/createProduct" method="post" class="form-control">
      <div class="card-body">
        <label for="title">Product Name:</label>
        <input type="text" name="title" id="title" class="form-control" placeholder="Title" required><br>
        <label for="price">value:</label>
        <input type="number" step="0.01" name="price" id="price" class="form-control" placeholder="price" required><br>
        <label for="status">status:</label>
        <select name="status" id="status" class="form-select">
          <option value="true">avalible</option>
          <option value="false">unavalible</option>
        </select><br>
        <label for="image">Image URL: </label>
        <input type="text" name="image" id="image" placeholder="Image URL" required class="form-control">
      </div>
      <div class="card-footer">
        <button class="btn btn-success">Create</button>
      </div>
    </form>
  </div> 
</div>
