<%- include('../../views/partials/head.ejs') %>
<div class="container"><br>
  <a href="/admin/products" class="btn btn-dark"> Back to Products</a><br>
  <br>
  <div class="card" style="width: 30rem;">
    <div class="card-header"><h3>Edit product</h3></div>
    <form action="/admin/editProduct" method="post" class="form-control">
      <div class="card-body">
        <label for="title">Product Name:</label>
        <input type="hidden" name="id" value="<%= produtos.id %>">
        <input type="text" name="title" id="title" class="form-control" placeholder="Title" value="<%= produtos.title %>" required><br>
        <label for="price">value:</label>
        <input type="number" step="0.01" name="price" id="price" class="form-control" placeholder="price" required value="<%= produtos.price %>"><br>
        <label for="status">status:</label>
        <select name="status" id="status" class="form-select">
          <option value="true" <%= produtos.status === true ? 'selected' : '' %>>avalible</option>
          <option value="false" <%= produtos.status === false ? 'selected' : '' %>>unavalible</option>
        </select><br>
        <label for="image">Image URL: </label>
        <input type="text" name="image" id="image" placeholder="Image URL" required class="form-control" value="<%= produtos.image %>">
      </div>
      <div class="card-footer">
        <button class="btn btn-success">update</button>
      </div>
    </form>
  </div> 
</div>
<%- include('../../views/partials/foot.ejs') %>

